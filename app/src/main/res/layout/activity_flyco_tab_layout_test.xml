<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.example.ysd.firstdemo.activity.FlycoTabLayoutTestActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="FlycoTabLayout测试"
            android:textColor="#000"
            android:textSize="23sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_common_flycoTabLayoutActivity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#ccc"
            android:gravity="center"
            android:text="commonTab测试"
            android:textColor="#000"
            android:textAllCaps="false"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_segment_flycoTabLayoutActivity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#ccc"
            android:gravity="center"
            android:text="segmentTab测试"
            android:textColor="#000"
            android:textAllCaps="false"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_sliding_flycoTabLayoutActivity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#ccc"
            android:gravity="center"
            android:text="slidingTab测试"
            android:textColor="#000"
            android:textAllCaps="false"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>
