<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ysd.firstdemo">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 在SD卡中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 向SD卡写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".TestApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OkHttpTestActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".RetrofitTestActivity"
            android:launchMode="singleTop" />
        <activity android:name=".EventBusTestActivity" />
        <activity android:name=".activity.BGABannerTestActivity" />
        <activity android:name=".activity.GuideTestActivity" />
        <activity android:name=".activity.ListViewDemoActivity" />
        <activity android:name=".activity.RecyclerViewDemoActivity" />
        <activity android:name=".activity.FrescoDemoActivity" />
        <activity android:name=".activity.FlycoTabLayoutTestActivity" />
        <activity android:name=".activity.CommonTabActivity" />
        <activity android:name=".activity.SegmentTabActivity" />
        <activity android:name=".activity.SlidingTabActivity" />
        <activity android:name=".activity.RecyclerViewTestActivity" />
        <activity android:name=".activity.AnimationUseActivity" />
        <activity android:name=".activity.MultipleItemUseActivity" />
        <activity android:name=".activity.HeaderAndFooterUseActivity"></activity>
    </application>

</manifest>